{
  "$schema": "https://www.hl7.org/fhir/testscript.schema.json.html",
  "resourceType": "TestScript",
  "url": "https://beda.software/TestScript/vitals",
  "name": "vitals-questionnaire-sdc-tests",
  "status": "draft",
  "contained": [
    {
      "resourceType": "Patient",
      "id": "example",
      "name": [
        {
          "use": "official",
          "given": ["Peter", "James"],
          "family": "Chalmers"
        }
      ]
    },
    {
      "resourceType": "Parameters",
      "id": "populate-launch-context-params",
      "parameter": [
        {
          "name": "Patient",
          "resource": {
            "resourceType": "Patient",
            "id": "example",
            "name": [
              {
                "use": "official",
                "given": ["Peter", "James"],
                "family": "Chalmers"
              }
            ]
          }
        }
      ]
    }
  ],
  "fixture": [
    {
      "id": "launched-patient",
      "resource": { "reference": "#Patient/example" }
    },
    {
      "id": "allergies-questionnaire",
      "resource": {
        "reference": "file://../resources/allergies-questionnaire.json"
      }
    },
    {
      "id": "launch-context-params",
      "resource": { "reference": "#Parameters/populate-launch-context-params" }
    }
  ],
  "variable": [
    {
      "name": "launched-patient-id",
      "sourceId": "launched-patient",
      "expression": "Patient.id"
    }
  ],
  "test": [
    {
      "name": "allergies-populate",
      "description": "Allergies questionnaire SDC populate",
      "action": [
        {
          "operation": {
            "type": {
              "system": "http://terminology.hl7.org/CodeSystem/testscript-operation-codes",
              "code": "populate"
            },
            "resource": "Questionnaire",
            "description": "Questionnaire population",
            "accept": "json",
            "method": "post",
            "targetId": "allergies-questionnaire",
            "sourceId": "launch-context-params",
            "responseId": "populate-response"
          }
        },
        {
          "assert": {
            "description": "check populated patient ID",
            "sourceId": "populate-response",
            "resource": "QuestionnaireResponse",
            "expression": "QuestionnaireResponse.repeat(item).where(linkId='patientId').answer.value.string",
            "value": "${launched-patient-id}"
          }
        }
      ]
    }
  ],
  "teardown": {}
}
